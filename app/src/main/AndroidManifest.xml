<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.godmother.itemsplanner">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="com.godmother.itemsplanner.activities.StartActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.godmother.itemsplanner.activities.MainActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.godmother.itemsplanner.activities.LoginActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.godmother.itemsplanner.activities.RegisterActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.godmother.itemsplanner.activities.ForgotPasswordActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.godmother.itemsplanner.activities.ItemsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.godmother.itemsplanner.activities.ItemActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.godmother.itemsplanner.activities.MyItemsReservations"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.godmother.itemsplanner.activities.AllBookingsAdminPanelActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.godmother.itemsplanner.activities.CategoriesAdminPanelActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.godmother.itemsplanner.activities.ItemsAdminPanelActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.godmother.itemsplanner.activities.AddNewItemActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.godmother.itemsplanner.activities.EditItemActivity"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>